<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/tour"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hey anonymous!"
        android:id="@+id/title_text"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:textAlignment="center" />
    <Button
        android:layout_width="248dp"
        android:layout_height="60dp"
        android:text="FREESTYLE"
        android:id="@+id/button1"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/title_text"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#9fba78"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textSize="22sp"
        android:onClick="callFreeStyle"/>


    <Button
        android:layout_width="248dp"
        android:layout_height="60dp"
        android:text="ROUNDABOUT"
        android:id="@+id/button2"
        android:layout_below="@+id/button1"
        android:layout_alignRight="@+id/button1"
        android:layout_alignEnd="@+id/button1"
        android:layout_marginTop="20dp"
        android:background="#9fba78"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textSize="22sp"
        android:onClick="callRoundAbout"/>

    <Button
        android:layout_width="248dp"
        android:layout_height="60dp"
        android:text="GROUP TRIP"
        android:id="@+id/button3"
        android:layout_below="@+id/button2"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:layout_marginTop="20dp"
        android:background="#9fba78"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textSize="22sp"
        android:onClick="callGroupTrip"/>

    <Button
        android:layout_width="248dp"
        android:layout_height="60dp"
        android:text="TRAVEL DIARY"
        android:id="@+id/button4"
        android:layout_below="@+id/button3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="#9fba78"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textSize="22sp"
        android:onClick="callTravelDiary"/>

    <Button
        android:layout_width="248dp"
        android:layout_height="60dp"
        android:text="Login"
        android:id="@+id/button5"
        android:layout_below="@+id/button4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="#9fba78"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textSize="22sp"
        android:onClick="callLogin"/>
</RelativeLayout>

